#Base camera & floor
camera: p(0,0,0) u(1,0,0) v(0,1,0) f(0.5)
checkeredplane: p(0,-5,0) u(1,0,0) v(0,0,1) c1(255,255,255) c2(0,0,0) w(5) h(5)

#Checkered Sphere
checkeredsphere: p(0,-4.75,12) r(.25) n(0,1,-1) s(1,0,0) c1(200,200,200) c2(100,100,100)
# Red is X
checkeredsphere: p(1,-4.75,12) r(.25) n(0,1,-1) s(1,0,0) c1(255,128,128) c2(255,200,200)
# Green is Y
checkeredsphere: p(0,-3.75,12) r(.25) n(0,1,-1) s(1,0,0) c1(128,255,128) c2(200,255,200)
# Blue is Z
checkeredsphere: p(0,-4.75,13) r(.25) n(0,1,-1) s(1,0,0) c1(128,128,255) c2(200,200,255)

pointLight: p(0,4,0) i(5e6)